<odoo>
    <data>
        <record id="view_dojo_member_tree" model="ir.ui.view">
            <field name="name">dojo.member.tree</field>
            <field name="model">dojo.member</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="belt_level" widget="badge" decoration-info="belt_level == 'white'"
                        decoration-warning="belt_level == 'yellow'"
                        decoration-success="belt_level == 'green'" />
                    <field name="birth_date" />
                </tree>
            </field>
        </record>

        <record id="view_dojo_member_form" model="ir.ui.view">
            <field name="name">dojo.member.form</field>
            <field name="model">dojo.member</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" />
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Member Name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="belt_level" />
                                <field name="birth_date" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Memberships">
                                <field name="membership_ids" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="action_dojo_member" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">dojo.member</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>