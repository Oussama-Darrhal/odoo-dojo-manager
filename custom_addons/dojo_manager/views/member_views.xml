<odoo>
    <data>
        <record id="view_dojo_member_tree" model="ir.ui.view">
            <field name="name">dojo.member.tree</field>
            <field name="model">dojo.member</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="belt_level" widget="badge"
                        decoration-warning="belt_level == 'yellow'"
                        decoration-danger="belt_level == 'black'" />
                    <field name="birth_date" />
                </tree>
            </field>
        </record>

        <record id="view_dojo_member_form" model="ir.ui.view">
            <field name="name">dojo.member.form</field>
            <field name="model">dojo.member</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_open_certificate" string="Print Certificate"
                            type="object" class="oe_highlight" icon="fa-print" />
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_memberships" type="object"
                                class="oe_stat_button" icon="fa-id-card">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="membership_count" />
                                    </span>
                                    <span class="o_stat_text">Memberships</span>
                                </div>
                            </button>
                        </div>

                        <field name="image" widget="image" class="oe_avatar" />
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="belt_level" />
                            </group>
                            <group>
                                <field name="birth_date" />
                            </group>
                        </group>

                        <notebook>
                            <page string="History">
                                <field name="membership_ids" readonly="1" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="action_dojo_member" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">dojo.member</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
    </data>
</odoo>