<odoo>
    <data>
        <record id="view_dojo_membership_tree" model="ir.ui.view">
            <field name="name">dojo.membership.tree</field>
            <field name="model">dojo.membership</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="member_id" />
                    <field name="membership_type_id" />
                    <field name="end_date" />
                    <field name="state" widget="badge" decoration-success="state == 'active'"
                        decoration-danger="state == 'expired'" decoration-info="state == 'draft'" />
                </tree>
            </field>
        </record>

        <record id="view_dojo_membership_form" model="ir.ui.view">
            <field name="name">dojo.membership.form</field>
            <field name="model">dojo.membership</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="member_id" />
                                <field name="membership_type_id" options="{'no_create': True}" />
                                <field name="price" />
                            </group>
                            <group>
                                <field name="start_date" />
                                <field name="duration" />
                                <field name="end_date" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_dojo_membership" model="ir.actions.act_window">
            <field name="name">Memberships</field>
            <field name="res_model">dojo.membership</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>